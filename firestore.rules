rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection - ข้อมูลผู้ใช้
    match /users/{userId} {
      // อนุญาตให้อ่านได้ถ้า login แล้ว
      allow read: if request.auth != null;

      // อนุญาตให้สร้างบัญชีใหม่ได้ถ้า UID ตรงกับ Auth UID
      allow create: if request.auth != null && request.auth.uid == userId;

      // อนุญาตให้แก้ไขได้
      allow update: if request.auth != null &&
                    (
                      request.auth.uid == userId ||  // ตัวเองแก้ได้
                      request.auth.token.role == "admin"  // Admin แก้ได้ทุกคน
                    ) &&
                    !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid', 'email']);

      // อนุญาตให้ admin ลบผู้ใช้อื่นได้
      allow delete: if request.auth != null && request.auth.token.role == 'admin';

      // Nested Unavailability Collection for Doctors
      match /unavailability/{unavailabilityId} {
        // Only the user themselves can read or write their own unavailability
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Appointments Collection - การนัดหมาย
    match /appointments/{appointmentId} {
      allow read, write: if request.auth != null;
    }

    // Notifications Collection - การแจ้งเตือน
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }

    // Medical History Collection - ประวัติการรักษา
    match /medical_history/{historyId} {
      allow read, write: if request.auth != null;
    }

    // Messages Collection - ข้อความแชท
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
  }
}
